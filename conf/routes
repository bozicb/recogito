# Routes
# ~~~~


# Static resources
GET     /labs/grct/static/*file                controllers.Assets.at(path="/public", file)

# Authentication
GET     /labs/grct/login                       controllers.Auth.login
POST    /labs/grct/login                       controllers.Auth.authenticate
GET     /labs/grct/logout                      controllers.Auth.logout


# API
# ~~~~

# Documents
GET     /labs/grct/api/documents               controllers.DocumentController.listAll
GET     /labs/grct/api/documents/:id           controllers.DocumentController.get(id: Int, format: Option[String])

# Annotations
POST    /labs/grct/api/annotations             controllers.AnnotationController.create
GET     /labs/grct/api/annotations/:id         controllers.AnnotationController.get(id: Int)
PUT     /labs/grct/api/annotations/:id         controllers.AnnotationController.update(id: Int)
DELETE  /labs/grct/api/annotations/:id         controllers.AnnotationController.delete(id: Int)

# Search
GET     /labs/grct/api/search                  controllers.SearchController.search(query: String)


# Application
# ~~~~

# Public views
GET     /labs/grct/map                         controllers.ApplicationController.showMap(doc: Int)

# Private views 
GET     /labs/grct/edit/text                   controllers.ApplicationController.showTextAnnotationUI(text: Int)
GET     /labs/grct/edit/map                    controllers.ApplicationController.showMapCorrectionUI(doc: Int)
GET     /labs/grct/history                     controllers.ApplicationController.showHistory

GET     /labs/grct/admin/annotations           controllers.AdminController.backupAnnotations(doc: Option[Int], part: Option[Int]) 
POST    /labs/grct/admin/annotations           controllers.AdminController.importAnnotations(doc: Int)
DELETE  /labs/grct/admin/annotations           controllers.AdminController.dropAnnotations(doc: Int)
GET     /labs/grct/admin                       controllers.AdminController.index

# Index page (available in public and private version)
GET     /labs/grct/                            controllers.ApplicationController.index
GET     /labs/grct                             controllers.ApplicationController.index